
<!-- pagine per l'index delle notifiche scritta identica a quella per l'index degli utenti -->

<% provide(:title, 'All Notifications') %>
<h1>All Notifications</h1>

<%= will_paginate %> 
<ul class="users">
	
<% @notifications.order('created_at DESC').each do |notif| %>
	<li>
	<%= gravatar_for notif.notified_by, size: 50 %>
	<font color="#0000FF"> <%= notif.notified_by.name %> </font> started to follow you 
	<br/>
	<%= notif.created_at %>

    </li>
<% end %>
</ul>

<%= will_paginate %> 

