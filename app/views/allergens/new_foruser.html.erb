
<% provide(:title, 'Add allergen') %>
<h1>Add allergen</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@allergen,:url => create_allergens_users_path) do |f| %>    <%# gli passo @user creatore nella new del controller, la form mi riempie le info di quell'utente %>
			 <%= render 'shared/error_messages', object: f.object %>   <%# partial definito in views/shared %>
			
			<%= f.label :name %>
			<%= f.select :type_allergen, @full_list, class: 'form-control' %>
			
			<%= hidden_field_tag :user_id, @user.id %>
			
			<%= f.submit "Add allergen", class: "btn btn-primary" %>
		<% end %>
	</div>
	
	<%= link_to 'View my profile', user_path(@user), class: "btn btn-lg btn-primary" %>        
	
</div>
