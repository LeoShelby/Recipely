<% provide(:title, "Edit menu") %>
<h1>Update your menu</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@menu) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>
  
	
            <%= f.label :primo %>
			<%= f.collection_select :primo_id , current_user.recipes, :id, :title, {:prompt => 'Vuoi cucinare il primo?'} %>
			
			<%= f.label :secondo %>
			<%= f.collection_select :secondo_id , current_user.recipes, :id, :title, {:prompt => 'Vuoi cucinare il secondo?'} %>
			
			<%= f.label :contorno %>
			<%= f.collection_select :contorno_id ,current_user.recipes, :id, :title, {:prompt => 'Vuoi cucinare il contorno?'} %>
			
			<%= f.label :dessert %>
			<%= f.collection_select :dessert_id , current_user.recipes, :id, :title, {:prompt => 'Vuoi cucinare il dessert?'} %>


			<%= hidden_field_tag :event_id, @event.id %> 
			
			

			<%= f.submit "Save changes", class: "btn btn-primary" %>

<% end %>

